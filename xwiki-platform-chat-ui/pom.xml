<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.xwiki.contrib</groupId>
    <artifactId>xwiki-platform-chat</artifactId>
    <version>5.1</version>
  </parent>
  <artifactId>xwiki-platform-chat-ui</artifactId>
  <packaging>xar</packaging>

  <name>XWiki Platform - Chat - UI</name>

  <properties>
    <xwiki.clirr.skip>true</xwiki.clirr.skip>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>xml-maven-plugin</artifactId>
        <executions>
          <!-- Build the skin file by adding resources to the wiki document's XML. -->
          <execution>
            <id>build-xwiki-chat-skin</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>transform</goal>
            </goals>
            <configuration>
              <transformationSets>
                <transformationSet>
                  <dir>${project.build.outputDirectory}</dir>
                  <outputDir>${project.build.outputDirectory}</outputDir>
                  <includes>
                    <include>XWiki/XWikiChatSkin.xml</include>
                  </includes>
                  <stylesheet>src/main/build/transformations/xwiki-chat-skin.xsl</stylesheet>
                  <!-- These parameters are used to embed needed resources in the skin file. If you want to add more resources, make sure to add them also in the XSL file! -->
                  <parameters>
                    <!-- XWiki template overrides -->
                    <parameter>
                      <name>stylesheets.vm.path</name>
                      <value>${basedir}/src/main/templates/stylesheets.vm</value>
                    </parameter>
                    <parameter>
                      <name>javascript.vm.path</name>
                      <value>${basedir}/src/main/templates/javascript.vm</value>
                    </parameter>
                    <parameter>
                      <name>footer.vm.path</name>
                      <value>${basedir}/src/main/templates/footer.vm</value>
                    </parameter>
                    <!-- Strophe javascript-->
                    <parameter>
                      <name>strophe.js.path</name>
                      <value>${basedir}/src/main/js/strophe.js</value>
                    </parameter>
                    <parameter>
                      <name>strophe.muc.js.path</name>
                      <value>${basedir}/src/main/js/strophe.muc.js</value>
                    </parameter>
                    <!-- XWiki chat javascript -->
                    <parameter>
                      <name>xwiki-chat.js.path</name>
                      <value>${basedir}/src/main/js/xwiki-chat.js</value>
                    </parameter>
                    <parameter>
                      <name>xwiki-chat-ui.js.path</name>
                      <value>${basedir}/src/main/js/xwiki-chat-ui.js</value>
                    </parameter>
                    <!-- XWiki chat CSS -->
                    <parameter>
                      <name>xwiki-chat.css.path</name>
                      <value>${basedir}/src/main/css/xwiki-chat.css</value>
                    </parameter>
                  </parameters>
                </transformationSet>
              </transformationSets>
            </configuration>
          </execution>
        </executions>
        <!-- Include Saxon for XSLT 2.0 processor. -->
        <dependencies>
          <dependency>
            <groupId>net.sf.saxon</groupId>
            <artifactId>saxon</artifactId>
            <version>8.7</version>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>

</project>
